<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView
            android:id="@+id/cpa_cpalogo" android:layout_width="250dip"
               android:layout_height="wrap_content" android:src="@drawable/cpa"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            />


    <TextView android:id="@+id/cpa_title_app_name" android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:textColor="@android:color/white"
               android:text="@string/app_name"
               android:textStyle="bold" android:textSize="@dimen/cpa_title_size"
               android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/cpa_cpalogo"
               android:layout_alignParentTop="true"
            />

    <TextView android:id="@+id/cpa_disclamer" android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:textColor="@android:color/white"
               android:text="@string/cpa_about"
               android:textSize="@dimen/cpa_disclamer_size"
               android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/cpa_cpalogo"
               android:layout_below="@id/cpa_title_app_name" android:layout_marginTop="10dip"
            />

    <ImageView
            android:id="@+id/cpa_samsunglogo" android:layout_width="200dip"
               android:layout_height="wrap_content" android:src="@drawable/samsung"
            android:layout_below="@id/cpa_disclamer" android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/cpa_logo_vsep"
            />

    <ImageView
            android:id="@+id/cpa_fnaclogo" android:layout_width="match_parent"
               android:layout_height="wrap_content" android:src="@drawable/fnac"
            android:layout_below="@id/cpa_disclamer" android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/cpa_logo_vsep"
             android:layout_toLeftOf="@id/cpa_samsunglogo"
            />

    <ImageView
            android:id="@+id/cpa_tmnlogo" android:layout_width="match_parent"
               android:layout_height="wrap_content" android:src="@drawable/tmn"
            android:layout_below="@id/cpa_disclamer" android:layout_toRightOf="@id/cpa_samsunglogo"
            android:layout_marginTop="@dimen/cpa_logo_vsep"
            />

</RelativeLayout>

